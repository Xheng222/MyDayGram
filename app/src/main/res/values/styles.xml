<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">#F2F1ED</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="materialAlertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:windowLightStatusBar">@color/colorPrimaryDark</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog" >
        <item name="android:background">@color/global </item>
        <item name="android:windowBackground">@color/transport</item>

        <item name="android:windowIsTranslucent">false</item>

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="ChooserDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/global</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--
        // 设置 Dialog 没有边框
        <item name="android:windowFrame">@null</item>
        // 设置 Dialog 没有标题
        <item name="android:windowNoTitle">true</item>
        // 设置 Dialog 的背景颜色
        <item name="android:background">@color/globalBg</item>
        // 设置 Dialog 弹出时整个 Dialog 窗口的背景颜色为透明
        <item name="android:windowBackground">@@android:color/transparent</item>
        // 设置 Dialog 浮动在 Activity 上
        <item name="android:windowIsFloating">true</item>
        // 设置 Dialog 的背景是否模糊
        <item name="android:backgroundDimEnabled">false</item>
        // 设置 Dialog 启动时没有闪屏页
        <item name="android:windowContentOverlay">@null</item>
    -->

    <style name="ChooserAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="material_dialog">
        <item name="android:windowEnterAnimation">@anim/material_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/material_dialog_out</item>
    </style>

</resources>