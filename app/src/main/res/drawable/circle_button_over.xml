<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:layout_width="match_parent"
            android:dither="true"
            android:shape="oval">

            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="2dp"
                android:color="#8b8b89" />
        </shape>

    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" >

        <shape android:shape="oval">

            <solid android:color="#8b8b89" />

            <size
                android:width="28dp"
                android:height="28dp" />

        </shape >

    </item >

</layer-list >